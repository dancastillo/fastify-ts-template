{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "environment.d.ts"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
